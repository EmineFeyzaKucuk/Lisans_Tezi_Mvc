
@{
    Layout = "~/Views/Stock/WareHouseOperations/_LayoutWarehouseOperations.cshtml";
    ViewData["Title"] = "WarehouseDefinition";
}
@model WarehouseDefinition

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <section class="content-header">
                        <div class="container-fluid">
                            <div class="row align-items-end">
                                <div class="col-sm-6 ">
                                    <h1>Depo Kayıtları</h1>
                                </div>


                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-right">
                                        <li class="breadcrumb-item">
                                            <form action="/WarehouseDefinition/WarehouseDefinitionnew" method="post">
                                                <button type="submit" class="btn btn-block btn-success">Yeni Depo Kaydı</button>
                                            </form>
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </section>

                </div>
            </div>

        </div>
    </div>

    <div class="card card-solid">
        <div class="card-body pb-0">
            <table id="stokCardTable" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Depo Kodu</th>
                        <th>Depo Adı</th>
                        <th>İşlem</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (System.Data.DataRow row in Model.dt.Tables[0].Rows)
                    {
                        <tr>
                            <td>@row["Id"]</td>
                            <td>@row["DEPO_KODU"]</td>
                            <td>@row["DEPO_ADI"]</td>
                            <td style="width:50px;">
                                <a href="#" data-id="@row["Id"]" onclick="editDepoKayıt(@row["Id"])">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

            <form method="post" id="depoForm" name="depoForm">
                <input type="hidden" value="" name="Id" />
            </form>
          


        </div>



    </div>

</div>
<script>


    function editDepoKayıt(id) {


        $("#depoForm input[name=Id]").attr("value", id)

        $("#depoForm").attr("action", "/WarehouseDefinition/WarehouseDefinitionEdit").submit();

    }

</script>


