@{
    Layout = "~/Views/Accounting/CurrentCardIdentification/_LayoutCurrentCardIdentification.cshtml";
    ViewData["Title"] = "CurrentCardIdentification";
}
@model dynamic


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
            <form method="post"  asp-controller="AccountingCurrentCardIdentification" asp-action="CreateAccountingCurrentCardDefinition">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                <div class="col-md-12"><label>CARİ KART TANIMLARI</label></div>
                                </div>
                            </div>
                  
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="row mt-2">
                                                <div class="col-md-2">
                                                    <label for="CARI_KODU">Cari Kodu:</label>
                                                </div>

                                                <div class="col-md-4 text-start">
                                                    <input class="form-control " name="CARI_KODU" type="text">
                                                </div>
                                                <div class="col-md-2">
                                                    <label for="UNVAN">Ünvan:</label>
                                                </div>
                                                <div class="col-md-4 text-start">
                                                    <input class="form-control " name="UNVAN" type="text">
                                                </div>
                                        </div>
                                        </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-md-12">
                                                <div class="card">
                                                    <h5 class="card-header">Tanımlamalar</h5>
                                                    <div class="card-body">
                                                        <div class="row mt-1">
                                                            <div class="col-md-4">
                                                                <label for="ADRES">Adres:</label>
                                                            </div>
                                                            <div class="col-md-8 text-start">
                                                                <input class="form-control " name="ADRES" type="text">
                                                            </div>
                                                        </div>
                                                        <div class="row mt-1">
                                                            <div class="col-md-4">
                                                                <label for="POSTA_KODU">Posta Kodu:</label>
                                                            </div>
                                                            <div class="col-md-8 text-start">
                                                                <input class="form-control " name="POSTA_KODU" type="text">
                                                            </div>
                                                        </div>
                                                        <div class="row mt-1">
                                                            <div class="col-md-4">
                                                                <label for="VERGI_ADRESI">Vergi Dairesi:</label>
                                                            </div>
                                                            <div class="col-md-8 text-start">
                                                                <input class="form-control " name="VERGI_ADRESI" type="text">
                                                            </div>
                                                        </div>
                                                        <div class="row mt-1">
                                                            <div class="col-md-4">
                                                                <label for="VERGI_NO">Vergi No:</label>
                                                            </div>
                                                            <div class="col-md-8 text-start">
                                                                <input class="form-control " name="VERGI_NO" type="text">
                                                            </div>
                                                        </div>
                                                        <div class="row mt-1">
                                                            <div class="col-md-4">
                                                                <label for="TELEFON">Telefon:</label>
                                                            </div>
                                                            <div class="col-md-8 text-start">
                                                                <input class="form-control " name="TELEFON" id="TELEFON" type="TEXT">
                                                            </div>
                                                        </div>
                                                        <div class="row mt-1">
                                                            <div class="col-md-4">
                                                                <label for="FAX">Fax:</label>
                                                            </div>
                                                            <div class="col-md-8 text-start">
                                                                <input class="form-control " name="FAX" type="text">
                                                            </div>
                                                        </div>

                                                        <div class="row mt-1">
                                                            <div class="col-md-4">
                                                                <label for="MUH_DETAY">Muhasebe Detay Kodu:</label>
                                                            </div>
                                                            <div class="col-md-8 text-start">
                                                                <input class="form-control " name="MUH_DETAY" type="text">
                                                            </div>
                                                        </div>

                                                        <div class="row mt-2">
                                                            <div class="col-md-4">
                                                                <label for="PARA_BIRIMI_ADI">Varsayılan İşlem Para Birimi:</label>
                                                            </div>


                                                            <div class="col-md-8">
                                                                <select id="PARA_BIRIMI" name="PARA_BIRIMI" class="form-control">
                                                                    <option value="">Seçiniz</option>
                                                                    @foreach (var item in ViewBag.data1)
                                                                    {
                                                                        <option value="@item.PARA_BIRIMI_KODU">@item.PARA_BIRIMI_KODU</option>
                                                                    }
                                                              

                                                                </select>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>

                                               
                                            </div>
                                        </div>



                                    </div>
                                </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-1 text-start">
                            <button type="submit" class="btn btn-success">Ekle</button>
                        </div>

                        <div class="col-md-1 text-start">
                            <button type="submit" class="btn btn-success">Sil</button>


                        </div>

                    </div>
        
            </form>

    </div>

        </div>

        <div class="row mt-3">
            <div class="col">

                @if (ViewBag.data2 != null && ViewBag.data2.Count > 0)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Cari Kodu</th>
                                <th scope="col">Unvan</th>
                                <th scope="col">Adres</th>
                                <th scope="col">Posta Kodu</th>
                                <th scope="col">Vergi Adresi</th>
                                <th scope="col">Vergi No</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Fax</th>
                                <th scope="col">Muhasebe Detay</th>
                                <th scope="col">Para Birimi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.data2)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.CARI_KODU</td>
                                    <td>@item.UNVAN</td>
                                    <td>@item.ADRES</td>
                                    <td>@item.POSTA_KODU</td>
                                    <td>@item.VERGI_ADRESI</td>
                                    <td>@item.VERGI_NO</td>
                                    <td>@item.TELEFON</td>
                                    <td>@item.FAX</td>
                                    <td>@item.MUH_DETAY</td>
                                    <td>@item.PARA_BIRIMI</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Kayıt bulunamadı.</p>
                }

            </div>
        </div>

       
    </div>



</div>