@{
    Layout = "~/Views/Accounting/OffsetReceiptEntry/_LayoutOffsetReceiptEntry.cshtml";
    ViewData["Title"] = "OffsetReceiptEntry";
}
@model dynamic
<div class="container" >
    <div class="row">
        <div class="col-md-12">
            <form action="post">

                <div class="row">
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="col-md-12"><label>MAHSUP FİŞİ GİRİŞİ</label></div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row mt-1">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Mahsup Fiş No:</label>
                                                </div>
                                                <div class="col-md-3 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>
                                            <div class="row mt-1">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Açıklama :</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row mt-1">
                                                <div class="col-md-4">
                                                    <label for="stok_kodu">Tarih:</label>
                                                </div>
                                                <div class="col-md-4 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>

                                            <div class="row mt-3">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">İşlem Statüsü:</label>



                                                    <select name="cars" id="cars">
                                                        <option selected disabled value="">Seçiniz...</option>
                                                        <option value="volvo">Geçici</option>
                                                        <option value="saab">Kesin</option>

                                                    </select>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mt-3">
                                        <div class="col-md-8">
                                            <div class="card">
                                                <h5 class="card-header">TANIM</h5>
                                                <div class="card-body">
                                                    <div class="row mt-1">
                                                        <div class="col-md-5">
                                                            <label for="stok_kodu">Muhasebe Hesap Kodu:</label>
                                                        </div>
                                                        <div class="col-md-4 text-start">
                                                            <input class="form-control " id="stok_kodu" type="text">
                                                        </div>
                                                    </div>
                                                    <div class="row mt-1">
                                                        <div class="col-md-5">
                                                            <label for="stok_kodu">Muhasebe Hesap Adı:</label>
                                                        </div>
                                                        <div class="col-md-4 text-start">
                                                            <input class="form-control " id="stok_kodu" type="text">
                                                        </div>
                                                    </div>
                                                    <div class="row mt-1">
                                                        <div class="col-md-5">
                                                            <label for="stok_kodu">Borç Tutarı:</label>
                                                        </div>
                                                        <div class="col-md-2 text-start">
                                                            <input class="form-control " id="stok_kodu" type="text">
                                                        </div>
                                                    </div>
                                                    <div class="row mt-1">
                                                        <div class="col-md-5">
                                                            <label for="stok_kodu">Alacak Tutarı:</label>
                                                        </div>
                                                        <div class="col-md-2 text-start">
                                                            <input class="form-control " id="stok_kodu" type="text">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>