@{
    Layout = "~/Views/Production/ProductionRecord/_LayoutProductionRecord.cshtml";
    ViewData["Title"] = "ProductionRecord";
}

<div class="container" style="background-color: grey;">
    <div class="row">
        <div class="col-md-12">
            <form action="post">

                <div class="row">
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <label>ÜRETİM KAYDI</label>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row mt-1">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Belge No:</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>

                                            <div class="row mt-1">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Üretim Emri No:</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>

                                            <div class="row mt-1">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Mamul Kodu:</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>

                                            <div class="row mt-1">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Stok Kodu:</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>

                                            <div class="row mt-3">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Ölçü Birimi:</label>



                                                    <select name="cars" id="cars">
                                                        <option selected disabled value="">Seçiniz...</option>
                                                        <option value="volvo">Adet</option>
                                                        <option value="saab">Kilogram</option>
                                                        <option value="mercedes">Litre</option>
                                                        <option value="audi">Metre</option>
                                                    </select>
                                                </div>

                                            </div>
                                        </div>


                                        <div class="col-md-6">
                                            <div class="row mt-1">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Tarih:</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Depo:</label>



                                                    <select name="cars" id="cars">
                                                        <option selected disabled value="">Seçiniz...</option>
                                                        <option value="volvo">YM</option>
                                                        <option value="saab">HM</option>
                                                        <option value="mercedes">MM</option>
                                                        <option value="audi">IM</option>
                                                    </select>
                                                </div>

                                            </div>

                                            <div class="row mt-1">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Miktar:</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>


                                            <div class="row mt-1">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Stok Adı:</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>

                                            <div class="row mt-1">
                                                <div class="col-md-6">
                                                    <label for="stok_kodu">Açıklama:</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>
                                            </div>




                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-12">
                                                <button type="button" class="btn btn-success btn-sm">Rapor Kayıt</button>
                                                <button type="button" class="btn btn-danger btn-sm">Rapor İptal</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>