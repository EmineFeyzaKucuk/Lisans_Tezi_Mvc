@{
    Layout = "~/Views/Production/OperationDescription/_LayoutOperationDescription.cshtml";
    ViewData["Title"] = "OperationDescription";
}

@model OperationDescription

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <section class="content-header">
                        <div class="container-fluid">
                            <div class="row align-items-end">
                                <div class="col-sm-6 ">
                                    <h1>Operasyon Tanımlama</h1>
                                </div>


                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-right">
                                        <li class="breadcrumb-item">
                                            <form action="/OperationDescription/OperationDescriptionNew" method="post">
                                                <button type="submit" class="btn btn-block btn-success">Yeni Operasyon Kaydı</button>
                                            </form>
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </section>

                </div>
            </div>

        </div>
    </div>

    <div class="card card-solid">
        <div class="card-body pb-0">
            <table id="stokCardTable" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Operasyon Kodu</th>
                        <th>Operayon Adı</th>
                        <th>Açıklama</th>
                        <th>Haftalık Kapasite</th>
                        <th>İşlem</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (System.Data.DataRow row in Model.dt.Tables[0].Rows)
                    {
                        <tr>
                            <th>@row["Id"]</th>
                            <td>@row["OPERASYON_KODU"]</td>
                            <td>@row["OPERASYON_ADI"]</td>
                            <td>@row["OPERASYON_ACIKLAMA"]</td>
                            <td>@row["HAFTALIK_KAPASITE"]</td>
                            <td style="width:50px;">
                                <a href="#" data-id="@row["Id"]" onclick="editOperasyonKayıt(@row["Id"])">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>


            <form method="post" id="operationForm" name="operationForm">
                <input type="hidden" value="" name="Id" />
            </form>


        </div>



    </div>

</div>

<script>


    function editOperasyonKayıt(id) {


        $("#operationForm input[name=Id]").attr("value", id)

        $("#operationForm").attr("action", "/OperationDescription/OperationDescriptionEdit").submit();

    }

</script>