@{
    Layout = "~/Views/Production/MachineIdentification/_LayoutMachineIdentification.cshtml";
    ViewData["Title"] = "MachineIdentification1";
}


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Lisans_Tezi_Mvc

@model MachineIdentification

<div class="row" style="padding-top: 10px;">
    <div class="col-md-9">
        <form action="/MachineIdentification/MachineIdentificationSave" method="post" enctype="multipart/form-data" name="machineForm" id="machineForm">

            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Makine Kayıtları</h3>
                    <ul class="nav nav-pills" style="float: right;">
                        <li class="nav-item"><a class="nav-link active" href="#tanımTab" data-toggle="tab">Tanım</a></li>

                    </ul>
                </div>


                <div class="card-body">
                    <div class="tab-content">
                        <div id="tanımTab" class="tab-pane active">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label for="MAKINE_KODU">Makine Kodu</label>
                                        <input asp-for="MAKINE_KODU" type="text" class="form-control ">
                                    </div>
                                    <div class="form-group">
                                        <label for="ACIKLAMA">Açıklama</label>
                                        <input asp-for="ACIKLAMA" type="text" class="form-control ">
                                    </div>
                                    <div class="col">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="A_P" id="flexRadioDefault1">
                                            <label class="form-check-label" for="flexRadioDefault1">
                                                Aktif
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="A_P" id="flexRadioDefault1">
                                            <label class="form-check-label" for="flexRadioDefault1">
                                                Pasif
                                            </label>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label for="MAKINE_ADI">Makine Adı</label>
                                        <input asp-for="MAKINE_ADI" type="text" class="form-control ">
                                    </div>
                                    <div class="form-group">
                                        <label for="URETIM_SURESI">Üretim Süresi</label>
                                        <input asp-for="URETIM_SURESI" type="text" class="form-control ">
                                    </div>
                                    <div class="form-group">
                                        <label for="HAZIRLIK_SURESI">Hazırlık Süresi</label>
                                        <input asp-for="HAZIRLIK_SURESI" type="text" class="form-control ">
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer text-right">
                <button type="button" class="btn btn-danger" id="machineSil">
                    <i class="fas fa-trash-alt"></i>
                    &nbsp;Sil
                </button>
                <button type="button" class="btn btn-primary" id="machineVazgec">
                    <i class="fa fa-backward"></i>
                    &nbsp;Vazgeç
                </button>
                <button type="submit" class="btn btn-primary" id="machineKaydet">
                    <i class="fa fa-save"></i>
                    &nbsp;Kaydet
                </button>
            </div>


        </form>

    </div>


</div>

<script>

    document.addEventListener("DOMContentLoaded", function (event) {
        $(document).ready(function () {

            $("#machineVazgec").click(function () {

                $("#machineForm").attr("action", "/Production/MachineIdentification").submit()

            });

            $("#machineSil").click(function () {

                $.confirm({
                    theme: 'supervan',
                    title: 'Uyarı!',
                    content: 'Makine Kaydı Silinecek!',
                    buttons: {
                        evet: {
                            text: 'Evet',
                            action: function () {
                                $("#machineForm").attr("action", "/Production/MachineIdentification/MachineIdentificationDelete").submit()
                            }
                        },
                        hayir: {
                            text: 'Hayır',

                        }
                    }
                });
            });

        })

    })
</script>
























